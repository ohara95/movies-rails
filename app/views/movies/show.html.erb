<div>
  <%= render "layouts/error_messages", locals: { model: @movie } %> 
  <% if flash[:notice] %>
    <div class="alert alert-success"><%= flash[:notice] %></div>
  <% end %>
  <div>
    <% if @movie.image_url.present? %>
      <%= image_tag @movie.image_url %>
    <% end %>
  </div>
  <div><%= @movie.name %></div>
  <div><%= @movie.year %></div>
  <div><%= simple_format(@movie.description) %></div>
  <div>
    <% if @movie.is_showing %>
      上映中
    <% else %>
      上映予定
    <% end %>
  </div>
    <% if @schedule.present? %>
      <div>上映開始時刻: <%= @schedule.start_time.to_s(:time_jp) %></div>
      <div>上映終了時刻: <%= @schedule.end_time.to_s(:time_jp) %></div>
    <% end %>
  </div>
  <%= form_with url: movie_setup_resevation_path(movie_id: params[:id]), method: :get, local: true do |f| %>
    <div class="form-group field">
      <%= f.label :start_time, "日付", class: "control-label" %>
      <%= f.select :start_time, (Date.today..(Date.today + 6.days)).map {|i| [i.strftime("%Y/%m/%d"), i.strftime("%F")]} %> 
    </div>
    <div class="form-group field">
      <%= f.label :schedule_id, "時間", class: "control-label"  %>
      <%= f.select :schedule_id, @start_time, include_blank: "選択して下さい" %>
    </div>
    <%= f.submit '座席を予約する', class: 'btn btn-outline-dark' %>
  <% end %>
</div>

