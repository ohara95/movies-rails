<div class="container">
  <%= form_for @schedule, url: admin_movie_schedules_path(movie_id: params[:movie_id]) do |f| %>
    <%= render :partial => 'form', :locals => {:f => f}, model: @schedule %>
    <div class="d-flex justify-content-center mt-2">
      <%= f.submit t('create'), class: 'btn btn-outline-dark col-md-2' %>
      <%= link_to t('back'), admin_movie_schedules_path(params[:movie_id]), class: 'btn btn-outline-dark col-md-2 ml-2' %>
    </div>
  <% end %>
</div>