<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <h1 >スケジュール一覧</h1>
    <h2><%= @schedule.movie_id %><%= @schedule.movie.name %></h2>
    <% if flash[:notice] %>
      <div class="alert alert-danger"><%= flash[:notice] %></div>
    <% end %>
    <%= link_to "新規登録", new_admin_movie_schedule_path(id: @schedule.movie_id), class: 'btn btn-primary' %>
  </div>
  <div>
    <% @schedules.each do |schedule| %>
    <div class="d-flex justify-content-between align-items-center">
      <%= link_to admin_schedule_path(schedule) do %>
        <div>
          上映開始時刻: <%= schedule.start_time.to_s(:time_jp) %>
          上映終了時刻: <%= schedule.end_time.to_s(:time_jp) %>
        </div>
      <% end %>
      <div>
        <%= link_to '編集', edit_admin_schedule_path(schedule), class: 'btn btn-outline-dark' %>
        <%= link_to "削除", admin_schedule_path(id: schedule.id, movie_id: schedule.movie_id), class: 'btn btn-outline-danger', method: :delete, data: { confirm: "削除しますか？" } %>
      </div>
    </div>
    <% end %>
  </div>
</div>