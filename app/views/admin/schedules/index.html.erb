<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <h1 >スケジュール一覧</h1>
    <h2><%= @schedule_name %></h2>
    <% if flash[:notice] %>
      <div class="alert alert-danger"><%= flash[:notice] %></div>
    <% end %>
    <div class="d-flex justify-content-center mt-2">
      <%= link_to "管理一覧", admin_movies_path, class: 'btn btn-outline-primary' %>
      <%= link_to "新規登録", new_admin_movie_schedule_path(id: params[:id]), class: 'btn btn-outline-primary ml-2' %>
    </div>
  </div>
  <div>
    <% @schedules.each do |schedule| %>
    <div class="d-flex justify-content-between align-items-center mt-2">
      <div>上映開始時刻: <%= schedule.start_time.to_s(:time_jp) %> / 上映終了時刻: <%= schedule.end_time.to_s(:time_jp) %></div>
      <div>
        <%= link_to '編集', edit_admin_schedule_path(schedule), class: 'btn btn-outline-dark' %>
        <%= link_to "削除", admin_schedule_path(id: schedule.id, movie_id: schedule.movie_id), class: 'btn btn-outline-danger', method: :delete, data: { confirm: "削除しますか？" } %>
      </div>
    </div>
    <% end %>
  </div>
</div>