<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <h1 >予約一覧</h1>
    <% if flash[:notice] %>
      <div class="alert alert-danger"><%= flash[:notice] %></div>
    <% end %>
    <%= link_to "予約追加", new_admin_reservation_path, class: 'btn btn-primary' %>
  </div>
  <div class="mt-2">
    <table class="table">
      <thead>
        <th>映画作品</th>
        <th>座席</th>
        <th>日時</th>
        <th>名前</th>
        <th>メールアドレス</th>
        <th></th>
        <th></th>
      </thead>
      <tbody>
        <% @reservations.each do |reservation| %>
          <tr class="mt-1">
            <td>
              <% @movies.each do |movie| %>
                <% if movie.id == reservation.movie_id %>
                  <%= movie.name %>
                <% end %>
              <%%>
            </td>
            <td><%= reservation.sheet_id %></td>
            <td><%= reservation.date %></td>
            <td><%= reservation.name %></td>
            <td><%= reservation.email %></td>
            <td><%= link_to '詳細・修正', edit_admin_reservation_path(reservation), class: 'btn btn-outline-dark' %></td>
            <td><%= link_to "削除", admin_reservation_path(reservation.id), class: 'btn btn-outline-danger', method: :delete, data: { confirm: "削除しますか？" } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>