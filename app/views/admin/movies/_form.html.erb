<div class="container mt-4">
  <%= render "layouts/error_messages" %>
  <div class="d-flex align-items-center justify-content-center mt-2">
    <%= f.label :name, "タイトル", class: "col-sm-2 col-form-label" %>
    <div class="col-md-4">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="d-flex align-items-center justify-content-center mt-2">
    <%= f.label :year, "公開年", class: "col-sm-2 col-form-label" %>
    <div class="col-md-4">
      <%= f.text_field :year, class: "form-control" %>
    </div>
  </div>
  <div class="d-flex align-items-center justify-content-center mt-2">
    <%= f.label :description, "概要", class: "col-sm-2 col-form-label" %>
    <div class="col-md-4">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="d-flex align-items-center justify-content-center mt-2">
    <%= f.label :is_showing, "上映中", class: "col-sm-2 col-form-label" %>
    <div class="col-md-4">
      <%= f.check_box :is_showing, :as => :boolean, checked:false %>
    </div>
  </div>
</div>
