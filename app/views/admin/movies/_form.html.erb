<%= render "layouts/error_messages", model: model %>
<p class="form-group field">
  <%= f.label :name, "タイトル", class: "control-label" %>
  <%= f.text_field :name, class: "form-control" %>
</p>
<p class="form-group field">
  <%= f.label :year, "公開年", class: "control-label" %>
  <%= f.text_field :year, class: "form-control" %>
</p>
<p class="form-group field">
  <%= f.label :description, "概要", class: "control-label" %>
  <%= f.text_area :description, class: "form-control" %>
</p>
<div class="form-group field">
  <%= f.label :image_url, "画像URL", class: "control-label" %>
  <%= f.file_field :image_url %>
</div>
<div class="form-group field">
  <%= f.label :is_showing, "上映中", class: "control-label" %>
  <%= f.check_box :is_showing, :as => :boolean, checked:false %>
</div>
